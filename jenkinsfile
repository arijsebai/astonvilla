pipeline {
    agent any 
    stages {
        stage ("Clean up"){
            steps {
                sh 'rm -rf /home/arij/.jenkins/workspace/astonvilla1/*'
                sh 'ls'
            }
        }
        stage ("Clone repo"){
            steps {
                sh "git clone https://github.com/arijsebai/astonvilla.git "
            }
        }
        stage ("Generate docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker build -t arij17/astonvilla-app:1.1.${env.BUILD_NUMBER} ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker push arij17/astonvilla-app:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
       
    }
}
