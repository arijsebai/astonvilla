pipeline {
    agent any 
    stages {
        
        stage ("Generate docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker build -t stonvilla-app:1.1.${env.BUILD_NUMBER} ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker push arij17/astonvilla-app:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
    }
}
