pipeline {
    agent any 
    stages {
        stage ("Clean up"){
            steps {
                sh 'rm -rf /home/arij/.jenkins/workspace/astonvilla/*'
                sh 'ls'
            }
        }
        stage ("Clone repo"){
            steps {
                sh "git clone https://github.com/arijsebai/astonvilla.git"
            }
        }
        stage ("Generate docker image") {
            steps {
                 
                sh "docker build -t astonvilla-app:1.1.${env.BUILD_NUMBER} ."
                sh ' docker images'
                               
            }
        }
      
        }
    }

